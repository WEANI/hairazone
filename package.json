{
  "name": "hairazone-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@hairazone/web",
    "dev:backend": "npm run dev --workspace=@hairazone/backend",
    "build:web": "npm run build --workspace=@hairazone/web",
    "build:backend": "npm run build --workspace=@hairazone/backend"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  }
}
